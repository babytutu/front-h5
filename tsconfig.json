{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "preserve",
    "allowJS": true,
    "isolatedModules": true,
    "strict": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
